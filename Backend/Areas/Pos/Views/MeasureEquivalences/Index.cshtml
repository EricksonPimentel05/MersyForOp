@model IEnumerable<Domain.GEN.MeasureEquivalence>

@{
    ViewBag.Title = "Equivalencias entre unidades de medidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "MeasureEquivalences", new { area = "Pos"   })"> <span class="fa fa-plus"></span> Registrar Nueva Equivalencia</a>


</p>
<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>
                    Unidad de Medida Principal
                </th>
                <th>
                    Unidad de Medida Inferior
                </th>
                <th>
                    Equivalencia
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeasureMaster.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeasureSlave.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equivalence)
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "MeasureEquivalences", new { area = "Pos" , id=@item.MeasureEquivalenceId })"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-info" href="@Url.Action("Details", "MeasureEquivalences", new { area = "Pos" , id=@item.MeasureEquivalenceId })"> <span class="fa fa-info"></span> Detalle </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "MeasureEquivalences", new { area = "Pos" , id=@item.MeasureEquivalenceId })" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}

