@model Domain.TRK.SaleAsosiation

@{
    ViewBag.Title = "Nuevo Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var originsList = ViewBag.Origins;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AuthorId)
    @Html.HiddenFor(model => model.PaymentTypeId)
    
    <div class="form-group">
        @Html.LabelFor(model => model.AccountId, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("AccountId", null, new { @class = "form-control" })
            @*+ Añade valor positivo*@
            @Html.ValidationMessageFor(model => model.AccountId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Seleccione la forma en que el costo de venta afectara la cuenta seleccionada
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AccountId, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("AccountId", null, new { @class = "form-control" })
            @*+ Añade valor positivo*@
            @Html.ValidationMessageFor(model => model.AccountId, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <a class="btn btn-warning" href="@Url.Action("Index", "Accounts", new { area = "Pos" })">
                <span class="fa fa-times "></span> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o "></i> Guardar
            </button>

        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


