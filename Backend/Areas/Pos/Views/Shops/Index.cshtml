@model IEnumerable<Domain.POS.Shop>

@{
    ViewBag.Title = "Tiendas/Sucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Shops", new { area = "Pos"   })"> <span class="fa fa-plus"></span> Registrar Nueva Sucursal </a>


</p>
<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Author.Code)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebAddress)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Tel)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.CreationDate)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Author.Code)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WebAddress)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>*@
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Shops", new { area = "Pos" , id=@item.ShopId })"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-info" href="@Url.Action("Details", "Shops", new { area = "Pos" , id=@item.ShopId })"> <span class="fa fa-info"></span> Detalle </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Shops", new { area = "Pos" , id=@item.ShopId })" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}


