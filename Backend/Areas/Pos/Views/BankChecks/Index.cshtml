@model IEnumerable<Domain.CPO.BankCheck>

@{
    ViewBag.Title = "Cheques";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 


<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "BankChecks", new { area = "Pos"   })"> <span class="fa fa-plus"></span> Registrar Nuevo cheque </a>


</p>
<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankCheckDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InNameOf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BankCheckDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InNameOf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "BankChecks", new {area = "Pos", id = @item.BankCheckId})"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                    <a class="btn btn-info" href="@Url.Action("Details", "BankChecks", new {area = "Pos", id = @item.BankCheckId})"> <span class="fa fa-info"></span> Detalle </a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "BankChecks", new {area = "Pos", id = @item.BankCheckId})" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>

                    
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}


