<div style="max-width: 8.3in; max-height:5.6in">
    @*<div  >*@
    <div style="height: 6%; width: 100%">
        <table id="TableHeader" style="font-size: 10pt; font-family: Times New Roman; font-weight: bold; text-transform: uppercase">
            <tr>
                <td rowspan="4" style="width: 15%">

                    <div>&nbsp;</div>
                </td>
                <td rowspan="4" style="width: 75%; text-align: center">
                    <div>&nbsp;</div> <div>&nbsp;</div> <div>&nbsp;</div>
                    <br /> <div>&nbsp;</div>
                </td>
                <td rowspan="4" style="width: 0"></td>
                <td style="width: 10%"></td>
            </tr>
        </table>
    </div>

    <div style="height: 36%; width: 100%">
        <div style="font-size: 8pt; font-family: Times New Roman;">
            <hr /><br /><br />
            <br />
            <div class="row">

                Yo: <b> @Html.DisplayFor(model => model.DoctorText)</b>
                @if (!string.IsNullOrEmpty(Model.Exequartur))
                {
                    <span>
                        , exequatur     @Html.DisplayFor(model => model.Exequartur)
                        @if (!string.IsNullOrEmpty(Model.Cmd))
                        {
                            <span>
                                ,       @Html.DisplayFor(model => model.Cmd)
                            </span>
                        }
                    </span>
                }
            </div>
            <br />
            <div class="row">
                Certifico haber examinado a: <b> @Html.DisplayFor(model => model.PatientName)</b>
                @if (!string.IsNullOrEmpty(Model.Patient.Person.Rnc))
                {
                    <span>
                        , Cedula:     @Html.DisplayFor(model => model.Patient.Person.Rnc)

                    </span>
                }
            </div>
            <br />

            <br />
            <div class="row">
                Quien presenta: <b> @Html.DisplayFor(model => model.Affections)</b>
            </div>
            <br />
            <br />
            <div class="row">
                Por lo que recomiendo: <b> @Html.DisplayFor(model => model.Recomendations)</b>
            </div>


            <br />
            <div class="row">
                Expido la presente Certificación en: <b> @Html.DisplayFor(model => model.Place)</b>
            </div>

            <br />
            <div class="row">
                Fecha: <b> @Html.DisplayFor(model => model.MedicalCertificateDate)</b>
            </div>
            <br /><br /><br /> <br />
            <div class="row" style="text-align: center">
                <center> Firma del Medico:___________________________________</center>
            </div>
        </div>
    </div>
    <hr />
