@model IEnumerable<Domain.MED.Recipe>

@{
    ViewBag.Title = "Recetas del Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-success" href="@Url.Action("Details", "Patients", new { area = "Medicals" , id=@ViewBag.PatientId })">
        <span class="fa fa-reply"> Volver a Atras</span>
    </a>
    <a class="btn btn-primary" href="@Url.Action("CreateRecipes", "Patients", new { area = "Medicals" , id=@ViewBag.PatientId })"> <span class="fa fa-user-plus"></span> Registrar Nueva Receta</a>
</p>

<div class="scroller">
    <table class="table">
        <thead>
        <tr><th></th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Observations)
            </th>
               
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("EditRecipes", "Patients", new {area = "Medicals", id = @item.RecipeId})"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                    <a class="btn btn-info" href="@Url.Action("DetailsRecipes", "Patients", new {area = "Medicals", id = @item.RecipeId})"> <span class="fa fa-info"></span> Detalles</a>
                    <a class="btn btn-danger" href="@Url.Action("DeleteRecipes", "Patients", new {area = "Medicals", id = @item.RecipeId})" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Observations)
                </td>
                   
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}


