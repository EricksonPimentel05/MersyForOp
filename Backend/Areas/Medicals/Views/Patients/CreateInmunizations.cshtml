@model Domain.MED.Inmunization

@{
    ViewBag.Title = "Registrar Nueva Vacuna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.PatientId)*@
        @Html.HiddenFor(model => model.PatientId)

        <div class="form-group">
            @Html.LabelFor(model => model.VaccineDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.VaccineDate, new { htmlAttributes = new { @class = "form-control PsDates" } })
                @Html.ValidationMessageFor(model => model.VaccineDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VaccineId, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("VaccineId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VaccineId, "", new { @class = "text-danger" })
            </div>
            
        </div>
 



        <div class="form-group">
            @Html.LabelFor(model => model.Coments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Coments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Coments, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-9">
                @if (ViewBag.PediatricId != 0)
                {
                    <a class="btn btn-warning" href="@Url.Action("DetailsPediatric", "Patients", new { area = "Medicals", id = @Model.PatientId })">
                    <span class="fa fa-times "></span> Cancelar
                    </a>
                }
                else
                {
                    <a class="btn btn-warning" href="@Url.Action("Details", "Patients", new {area = "Medicals", id = @Model.PatientId})">
                        <span class="fa fa-times "></span> Cancelar
                    </a>
                }

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o "></i> Guardar
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}