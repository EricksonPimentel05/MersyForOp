@*<div style="height: 11.5in;width:8.3in">*@
@*<div style="max-width: @Model.Width; max-height: @Model.Heigh">*@
<div >
    <div style="height: 12%; width: 100%">
        <table id="TableHeader" style="font-size: 12pt; font-family: Times New Roman; font-weight: bold; text-transform: uppercase">
            <tr>
                <td rowspan="4" style="width: 15%">

                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Url.Content(Model.Imagen)" alt="Image" style="width: auto; height: 85px;" dir="rtl"/>
                    }
                </td>
                <td rowspan="4" style="width: 75%; text-align: center">
                    @if (!string.IsNullOrEmpty(Model.Header1))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Header1)
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Header2))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Header2)
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Header3))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Header3)
                        </div>
                    }
                    <br/><br/>Certificado Medico
                </td>
                <td rowspan="4" style="width: 0"></td>
                <td style="width: 10%"></td>
            </tr>
        </table>
    </div>

    <div style="height: 75%; width: 100%">
        <div>
            <hr/><br/> <br />
            <div class="row">
                
                Yo: <b> @Html.DisplayFor(model => model.DoctorText)</b>
                @if (!string.IsNullOrEmpty(Model.Exequartur))
                { 
                    <span  >
                        , exequatur     @Html.DisplayFor(model => model.Exequartur) ,       @Html.DisplayFor(model => model.Cmd)
                    </span>
                }
            </div>
            <br/> 
            <div class="row">
                Certifico haber examinado a: <b> @Html.DisplayFor(model => model.PatientName)</b>
            </div>
            <br/> 
            
            <br/>
            <div class="row">
                Quien presenta: <b> @Html.DisplayFor(model => model.Affections)</b>
            </div>
            <br/> 
            <br/>
            <div class="row">
                Por lo que recomiendo: <b> @Html.DisplayFor(model => model.Recomendations)</b>
            </div>
             

            <br/> <br /> 
            <div class="row">
                Expido la presente Certificación en: <b> @Html.DisplayFor(model => model.Place)</b>
            </div>
            
            <br />
            <div class="row">
                Fecha: <b> @Html.DisplayFor(model => model.MedicalCertificateDate)</b>
            </div>
            <br/><br/><br/> <br/><br /> <br /> <br /> <br /> 
            <div class="row" style="text-align: center">
                <center> Firma del Medico:___________________________________</center>
            </div>
        </div>
    </div>
    <hr/>
    @*<div style="position:absolute; bottom: 0; text-align: center">*@
    @*<div style="position:relative; text-align: center">*@
    <div style="text-align: center; height: 5%; width: 100%">


        @if (!string.IsNullOrEmpty(Model.Footer1))
        {
            <div>
                @Html.DisplayFor(model => model.Footer1)
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Footer2))
        {
            <div>
                @Html.DisplayFor(model => model.Footer2)
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Footer3))
        {
            <div>
                @Html.DisplayFor(model => model.Footer3)
            </div>
        }

    </div>


</div>
