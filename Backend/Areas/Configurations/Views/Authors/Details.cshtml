@model Domain.GEN.Author

@{
    ViewBag.Title = "Detalle Cliente PraySoft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Plan.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plan.Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        

        

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-success" href="@Url.Action("Index", "Authors", new { area = "Configurations"  })">
        <span class="fa fa-reply"></span> Retornar a los Clientes PraySoft 
    </a>
    <a class="btn btn-primary" href="@Url.Action("CreateUser", "Authors", new { area = "Configurations" , id=@Model.AuthorId })">
        <span class="fa fa-plus"></span> Retornar a los Clientes PraySoft 
    </a>
    <a class="btn btn-default" href="@Url.Action("CreateRolF", "Authors", new { area = "Configurations" , id=@Model.AuthorId })">
        <span class="fa fa-plus"></span> Retornar a los Clientes PraySoft 
    </a>
    
</p>



<div class="row">
    <div class="col-md-6">
        <h4>Usuarios</h4>
        @if (Model.Users.Count == 0)
        {
            <h5>No existen Usuarios registrados todavia</h5>
        }
        else
        {

            <table class="table">
                <tr>
                    <th>
                        UserId
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Estado
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model.Users.OrderBy(g => g.FirstName))
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)  &nbsp;
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>

                    <td>
                        <a class="btn btn-warning" href="@Url.Action("EditUser", "Authors", new { area = "Configurations" , id=@item.UserId  })">
                            <span class="fa fa-pencil-square-o"></span>
                        </a>
                        <a class="btn btn-info" href="@Url.Action("DetailsUser", "Authors", new { area = "Configurations" , id=@item.UserId })">
                            <span class="fa fa-info-circle"></span>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("DeleteUser", "Authors", new { area = "Configurations" , id=@item.UserId })"
                           onclick="return confirm('Esta seguro que desea eliminar este registro?')">
                            <span class="fa fa-trash"></span>
                        </a>
                    </td>
                </tr>
                }

            </table>
        }
    </div>
    <div class="col-md-6">
        <h4>Roles</h4>
        @if (Model.Rols.Count == 0)
        {
            <h5>No existen Roles registrados aun</h5>
        }
        else
        {

            <table class="table">
                <tr>

                    <th>
                        Rol
                    </th>
                    <th>Descripcion</th>
                    <th>
                        Nivel
                    </th>
                    <th>Status</th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Rols.OrderBy(g => g.Name))
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.Name)
                        </td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("EditRol", "Authors", new { area = "Configurations" , id=@item.RolId  })">
                                <span class="fa fa-pencil-square-o"></span>
                            </a>
                            <a class="btn btn-info" href="@Url.Action("DetailsRol", "Authors", new { area = "Configurations" , id=@item.RolId })">
                                <span class="fa fa-info-circle"></span>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("DeleteRol", "Authors", new { area = "Configurations" , id=@item.RolId })"
                               onclick="return confirm('Esta seguro que desea eliminar este registro?')">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        }
    </div>
</div>
