@model IEnumerable<Domain.GEN.AuthorPlan>

@{
    ViewBag.Title = "Planes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Volver a los Clientes", "Index", "Authors")
    &nbsp;&nbsp;/&nbsp;&nbsp;
    @Html.ActionLink("Nuevo Plan", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodicity.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodicity.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AuthorPlanId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AuthorPlanId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AuthorPlanId })
        </td>
    </tr>
}

</table>
