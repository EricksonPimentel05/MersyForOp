@model Domain.CPO.BankCheck



<style type="text/css" media="print">
    .buttons {
        display: none;
    }

    p {
        overflow-wrap: break-word;
        word-wrap: break-word;
        -ms-word-break: break-all;
        word-break: break-all;
        word-break: normal;
        -ms-hyphens: auto;
        -moz-hyphens: auto;
        -webkit-hyphens: auto;
        hyphens: auto;
    }

    .label {
        word-wrap: break-word;
    }
</style>
<style type="text/css" media="print">
    #page {
        size: auto; /* auto is the initial value */
        margin: 0; /* this affects the margin in the printer settings */
    }
</style>
<body>

    @Html.HiddenFor(model => model.BankCheckId)

    <input type="button" id="btnImprimir" name="btnImprimir" tabindex="1" value="Imprimir" class="col-sm-2 col-sm-offset-4 btn btn-primary" />
    <input type="button" id="btnCerrar" name="btnCerrar" tabindex="2" value="Cerrar" class="col-sm-2 btn btn-primary" style="margin-left: 0.5em;" />
    <div id="Div2" style="width: 8.5in; height: 11in;text-align:left">
        <table style="position: relative; font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 8.5in;height:5.5in"></td>
                
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 1.4in;height:0.4in"></td>
                <td  style="width: 5in;height:0.4in"></td>
                <td  style="width: 1.7in;height:0.4in"></td>
                <td  style="width: 0.3in;height:0.4in">  </td>
                <td  style="width: 0.1in;height:0.4in">  </td>
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 0.4in; height: 1in">
                    
                </td>
                <td style="width: 1in; height: 1in">
                    <div>
                        @Html.DisplayFor(model => model.BankCheckDate, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                    
                </td>
                <td style="width: 5in; height: 1in">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Description, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    }
                </td>
                <td style="width: 1.7in; height: 1in">
                    @if ((Model.Amount != 0))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    }
                </td>
                <td style="width: 0.4in; height: 1in">

                </td>
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 1.4in;height:1.75in"></td>
                <td  style="width: 5in;height:1.75in"></td>
                <td  style="width: 1.7in;height:1.75in"></td>
                <td  style="width: 0.3in;height:1.75in">  </td>
                <td  style="width: 0.1in;height:1.75in">  </td>
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 1.7in; height: 0.4in">
                   
                </td>
                <td  style="width: 4.2in; height: 0.4in">
                    @if (!string.IsNullOrEmpty(Model.InNameOf))
                    {
                        <div>
                            @Html.DisplayFor(model => model.InNameOf, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    }
                   
                </td>
                <td  style="width: 0.5in; height: 0.4in">
                  
                </td>
                <td  style="width: 1.6in; height: 0.4in">
                    @if ((Model.Amount != 0))
                    {
                        <div>
                            @Html.DisplayFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    }
                   
                </td>
                <td  style="width: 0.5in; height: 0.4in">
                  
                </td>
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 0.3in; height: 0.4in">
                   
                </td>
                <td  style="width: 0.2in; height: 0.4in">
                   
                </td>
                <td  style="width: 7in; height: 0.4in">
                    @if (!string.IsNullOrEmpty(Model.LetterAmount))
                    {
                        <div>
                            @Html.DisplayFor(model => model.LetterAmount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    }
                   
                </td>
                <td  style="width: 0.5in; height: 0.4in">
                  
                </td>
                <td style="width: 0.5in; height: 0.4in">
                    
                </td>
            
            </tr>
        </table>
        <table style="font-size: 10pt; font-family: Times New Roman;  font-weight: bold; text-transform: uppercase">
            <tr>
                <td  style="width: 8.5in; height: 1.55in">
                   
                </td>
               
            
            </tr>
        </table>
       
        
        
      
    </div>

    <script>
        window.onload = function () {
            document.querySelector("#btnImprimir").style.display = "none";
            document.querySelector("#btnCerrar").style.display = "none";
            window.print();
        }
        // window.close();
    </script>
</body>
